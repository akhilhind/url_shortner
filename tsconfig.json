{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "typedocOptions": {
        "entryPoints": ["common/enums/*", "common/interfaces/*"],
        "out": "api-documentation"
    }
}